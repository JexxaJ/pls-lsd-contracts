    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "4.9.3",
    "chai": "^4.3.6",
    "ethers": "^5.7.0",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.6.1",
    "prettier": "3.0.3",
    "web3": "^1.7.5"
  },
